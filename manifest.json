{
  "manifest_version": 2,

  "name": "Text Speech Plugin",
  "description": "Personal Assistant on Chrome",
  "version": "1.0",


  "background":{
  	"scripts":["jquery-2.1.4.min.js", "eventPage.js"],
  	"persistent":true
  },
 
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },

  "permissions": [
    "activeTab",
    "https://ajax.googleapis.com/",
    "notifications"
  ],

  "web_accessible_resources": [
	"cheetah.JPG",
    "permission.html"
  ],

  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'"
  
}